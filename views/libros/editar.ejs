<%- include ../layouts/cabecera.ejs %>

    <h1>Datos del Libro</h1>
    <br>
    <form method="post" action="../actualizar" enctype="multipart/form-data">
        <div class="form-group mb-2">
            <label for="">Titulo</label>
            <input type="text" name="titulo" value="<%= libro[0].titulo %>" class="form-control" required>
            <input type="hidden" name="id" value="<%= libro[0].id %>">
        </div>

        <div class="form-group mb-2">
            <label for="">Imagen</label>
            <input type="file" name="imagen" class="form-control">
            <img class="img-thumbnail" width="150" src="../../images/<%= libro[0].imagen %>" alt="">
        </div>

        <div class="form-group mb-2">
            <label for="">Reseña</label>
            <input type="text" name="resena" value="<%= libro[0].resena %>" class="form-control">
        </div>

        <div class="form-group mb-2">
            <label for="">Autor</label>
            <input type="text" name="autor" value="<%= libro[0].autor %>" class="form-control" required>
        </div>

        <div class="form-group mb-2">
            <label for="">Año</label>
            <input type="text" name="anio" value="<%= libro[0].anio %>" class="form-control">
        </div>

        <br>
        <button class="btn btn-primary" type="submit">Guardar</button>
    </form>

    <%- include ../layouts/pie.ejs %>