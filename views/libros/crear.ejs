<%- include ../layouts/cabecera.ejs %>

<h1>Datos del Libro</h1>
<br>
<form method="post" action="/libros" enctype="multipart/form-data">
    <div class="form-group mb-2">
        <label for="">Titulo</label>
        <input type="text" name="titulo" class="form-control" required>
    </div>

    <div class="form-group mb-2">
        <label for="">Imagen</label>
        <input type="file" name="imagen" class="form-control">
    </div>

    <div class="form-group mb-2">
        <label for="">Reseña</label>
        <input type="text" name="resena" class="form-control" >
    </div>

    <div class="form-group mb-2">
        <label for="">Autor</label>
        <input type="text" name="autor" class="form-control" required>
    </div>

    <div class="form-group mb-2">
        <label for="">Año</label>
        <input type="text" name="anio" class="form-control">
    </div>
    <br>
    <button class="btn btn-primary" type="submit">Guardar</button>
</form>

