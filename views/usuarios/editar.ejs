<%- include ../layouts/cabecera.ejs %>

<h1>Modificar Datos del Usuario</h1>
<br>
<form method="post" action="../actualizar">
    <div class="form-group mb-2">
        <label for="">Nombre</label>
        <input type="text" name="nombre" value="<%= usuario[0].nombre %>" class="form-control" required>
        <input type="hidden" name="id" value="<%= usuario[0].id %>">
        <input type="hidden" name="cliente" value="<%= usuario[0].cliente %>">
    </div>

    <div class="form-group mb-2">
        <label for="">Usuario</label>
        <input type="text" name="usuario" value="<%= usuario[0].usuario %>" class="form-control" required >
    </div>

    <div class="form-group mb-2">
        <label for="">Password</label>
        <input type="text" name="password" value="<%= usuario[0].password %>" class="form-control" required>
    </div>

    <div class="form-group mb-2">
        <label for="">Direccion de Entrega</label>
        <select name="tipo" id="tipo" class="form-control">
            <% switch(usuario[0].tipo) {
                case 0: %>
                <option value="0" selected>Sin asignar</option>
                <option value="1">Administrador</option>
                <option value="2">Cliente</option>
            <%  break; 
                case 1: %>
                <option value="0">Sin asignar</option>
                <option value="1" selected>Administrador</option>
                <option value="2">Cliente</option>
            <% break;
                case 2: %>
                <option value="0">Sin asignar</option>
                <option value="1">Administrador</option>
                <option value="2" selected>Cliente</option>
            <% break;
            } %>
        </select>
    </div>

    <div class="form-group mb-2">
        <label for="">Activo</label>
        <select name="activo" id="activo" class="form-control">
            <% if (usuario[0].activo == 1) { %>
                <option value="0">Inactivo</option>
                <option value="1" selected>Activo</option>
            <% } else { %>
                <option value="0" selected>Inactivo</option>
                <option value="1">Activo</option>
            <% } %>    
        </select>
    </div>

    <br>
    <button class="btn btn-primary" type="submit">Guardar</button>
</form>

